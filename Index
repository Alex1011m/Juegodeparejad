    <script>
        const gameContainer = document.getElementById('game-container');
        const startScreen = document.getElementById('start-screen');
        const levelScreen = document.getElementById('level-screen');
        const gameScreen = document.getElementById('game-screen');
        const endScreen = document.getElementById('end-screen');
        const consentModal = document.getElementById('consent-modal');
        const player1Input = document.getElementById('player1-name');
        const player2Input = document.getElementById('player2-name');
        const player1ScoreDisplay = document.getElementById('player1-score-display');
        const player2ScoreDisplay = document.getElementById('player2-score-display');
        const playerTurnSpan = document.getElementById('player-turn');
        const questionText = document.getElementById('question-text');
        const winnerMessage = document.getElementById('winner-message');
        const finalScores = document.getElementById('final-scores');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');

        let players = [];
        let currentPlayerIndex = 0;
        let currentLevel = 0;
        let questions = [];

        // Base de datos de preguntas y desafÃ­os
        const allQuestions = [
            // Nivel 1: Inicia la ConversaciÃ³n
            { type: 'trivia', level: 1, question: 'Â¿CuÃ¡l es la pelÃ­cula que mÃ¡s has visto y por quÃ©?' },
            { type: 'trivia', level: 1, question: 'Si pudieras viajar a cualquier lugar del mundo ahora mismo, Â¿a dÃ³nde irÃ­as y con quiÃ©n?' },
            { type: 'trivia', level: 1, question: 'Â¿QuÃ© es lo que mÃ¡s admiras del otro?' },
            { type: 'trivia', level: 1, question: 'Â¿CuÃ¡l es tu recuerdo mÃ¡s feliz de nuestra relaciÃ³n hasta ahora?' },
            { type: 'dare', level: 1, question: 'Dale a tu pareja un masaje de hombros de 60 segundos.' },
            { type: 'trivia', level: 1, question: 'Si tuvieras un superpoder, Â¿cuÃ¡l serÃ­a?' },
            { type: 'trivia', level: 1, question: 'Â¿QuÃ© canciÃ³n te recuerda a nosotros?' },
            { type: 'dare', level: 1, question: 'Escribe un mensaje en la espalda de tu pareja con el dedo para que lo adivine.' },
            { type: 'trivia', level: 1, question: 'Â¿CuÃ¡l es tu cita ideal?' },
            { type: 'trivia', level: 1, question: 'Â¿QuÃ© harÃ­as si ganaras la loterÃ­a?' },
            { type: 'trivia', level: 1, question: 'Â¿QuÃ© es lo que mÃ¡s te hace reÃ­r de mÃ­?' },
            { type: 'dare', level: 1, question: 'Canta una canciÃ³n romÃ¡ntica para tu pareja, pero solo con el ritmo.' },

            // Nivel 2: Explora Juntos
            { type: 'trivia', level: 2, question: 'Â¿CuÃ¡l es un momento en el que te sentiste especialmente conectado/a conmigo?' },
            { type: 'trivia', level: 2, question: 'Â¿QuÃ© es algo que te gustarÃ­a hacer mÃ¡s en nuestra relaciÃ³n?' },
            { type: 'dare', level: 2, question: 'Besa a tu pareja en el cuello durante 15 segundos.' },
            { type: 'trivia', level: 2, question: 'Describe tres cosas que te ponen nervioso/a y una que te relaja.' },
            { type: 'dare', level: 2, question: 'Hazle cosquillas a tu pareja hasta que se rinda.' },
            { type: 'trivia', level: 2, question: 'Â¿QuÃ© te atrajo de mÃ­ al principio?' },
            { type: 'dare', level: 2, question: 'Dale un masaje de pies a tu pareja mientras le dices algo que amas de ella/Ã©l.' },
            { type: 'trivia', level: 2, question: 'Â¿CuÃ¡l es una fantasÃ­a que tienes que no me has contado?' },
            { type: 'trivia', level: 2, question: 'Â¿QuÃ© es lo mÃ¡s aventurero que has hecho?' },
            { type: 'dare', level: 2, question: 'Dale a tu pareja una bofetada en el trasero y un beso en el cuello.' },
            { type: 'trivia', level: 2, question: 'Â¿QuÃ© es lo que mÃ¡s te gusta de nuestra vida sexual?' },
            { type: 'dare', level: 2, question: 'Hagan una pose de yoga juntos, o una pose que les resulte divertida.' },

            // Nivel 3: SÃ© Atrevido
            { type: 'trivia', level: 3, question: 'Â¿CuÃ¡l es la parte de mi cuerpo que mÃ¡s te excita?' },
            { type: 'dare', level: 3, question: 'QuÃ­tale una prenda de ropa a tu pareja usando solo la boca y las manos.' },
            { type: 'trivia', level: 3, question: 'Describe tu fantasÃ­a sexual mÃ¡s audaz.' },
            { type: 'dare', level: 3, question: 'Lame crema batida del cuerpo de tu pareja.' },
            { type: 'trivia', level: 3, question: 'Si tuvieras que elegir una posiciÃ³n sexual para el resto de tu vida, Â¿cuÃ¡l serÃ­a?' },
            { type: 'dare', level: 3, question: 'Ponte una venda en los ojos y deja que tu pareja te toque donde quiera.' },
            { type: 'trivia', level: 3, question: 'Â¿QuÃ© es lo mÃ¡s salvaje que has hecho o quisieras hacer en la cama?' },
            { type: 'dare', level: 3, question: 'Simula el sexo oral con una fruta o verdura.' },
            { type: 'trivia', level: 3, question: 'Â¿QuÃ© es lo que mÃ¡s te gusta de nuestra vida sexual?' },
            { type: 'dare', level: 3, question: 'Â¡DesnÃºdate completamente y haz un baile provocador para tu pareja!' },
            { type: 'trivia', level: 3, question: 'Â¿QuÃ© te hace sentir mÃ¡s sexy cuando estamos juntos?' },
            { type: 'dare', level: 3, question: 'Toma un trago de una bebida y pÃ¡salo de boca a boca con tu pareja.' },
        ];
        
        // FunciÃ³n para barajar un array
        function shuffle(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        function toggleDarkMode() {
            const html = document.documentElement;
            html.classList.toggle('dark');
            sunIcon.classList.toggle('hidden');
            moonIcon.classList.toggle('hidden');
        }

        function startGame() {
            const player1Name = player1Input.value.trim() || 'Jugador 1';
            const player2Name = player2Input.value.trim() || 'Jugador 2';
            players = [
                { name: player1Name, score: 0 },
                { name: player2Name, score: 0 }
            ];
            updateScores(); // Muestra los puntajes iniciales
            startScreen.classList.add('hidden');
            levelScreen.classList.remove('hidden');
        }

        function selectLevel(level) {
            currentLevel = level;
            
            // Selecciona las preguntas segÃºn el modo
            if (level === 0) { // Modo Variado
                questions = allQuestions.slice();
            } else if (level === 4) { // Solo Preguntas
                questions = allQuestions.filter(q => q.type === 'trivia');
            } else if (level === 5) { // Solo Retos
                questions = allQuestions.filter(q => q.type === 'dare');
            } else { // Niveles 1, 2, 3
                questions = allQuestions.filter(q => q.level === level);
            }

            shuffle(questions);
            
            // Mostrar modal de consentimiento si el modo lo requiere
            if (currentLevel === 3 || currentLevel === 0 || currentLevel === 5) {
                consentModal.classList.remove('hidden');
            } else {
                showGameScreen();
            }
        }
        
        function closeConsentModal() {
            consentModal.classList.add('hidden');
            showGameScreen();
        }

        function showGameScreen() {
            levelScreen.classList.add('hidden');
            gameScreen.classList.remove('hidden');
            nextQuestion();
        }

        function updateScores() {
            player1ScoreDisplay.textContent = `${players[0].name}: ${players[0].score} puntos`;
            player2ScoreDisplay.textContent = `${players[1].name}: ${players[1].score} puntos`;
        }

        function addPointAndNext() {
            // AÃ±ade un punto al jugador actual
            players[currentPlayerIndex].score++;
            updateScores();

            // Pasa a la siguiente pregunta
            nextQuestion();
        }

        function nextQuestion() {
            if (questions.length === 0) {
                endGame();
                return;
            }

            const currentQuestion = questions.pop();
            questionText.textContent = currentQuestion.question;
            playerTurnSpan.textContent = `Turno de ${players[currentPlayerIndex].name}`;
            
            // Cambiar de jugador para la siguiente ronda
            currentPlayerIndex = (currentPlayerIndex + 1) % players.length;
        }

        function endGame() {
            gameScreen.classList.add('hidden');
            endScreen.classList.remove('hidden');

            const player1 = players[0];
            const player2 = players[1];

            let winner, loser;

            if (player1.score > player2.score) {
                winner = player1;
                loser = player2;
                winnerMessage.textContent = `Â¡${winner.name} ha ganado! ğŸ‰`;
            } else if (player2.score > player1.score) {
                winner = player2;
                loser = player1;
                winnerMessage.textContent = `Â¡${winner.name} ha ganado! ğŸ‰`;
            } else {
                // Empate
                winnerMessage.textContent = "Â¡Es un empate! Nadie gana ni pierde. ğŸ¤";
                finalScores.textContent = `Ambos tienen ${player1.score} puntos.`;
                return;
            }

            finalScores.textContent = `${winner.name}: ${winner.score} puntos | ${loser.name}: ${loser.score} puntos.`;
        }

        function restartGame() {
            endScreen.classList.add('hidden');
            gameScreen.classList.add('hidden');
            startScreen.classList.remove('hidden');
            currentPlayerIndex = 0;
            currentLevel = 0;
            questions = [];
            player1Input.value = '';
            player2Input.value = '';
        }
    </script>
</body>
</html>
